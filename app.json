{
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "https://buildpack-registry.s3.amazonaws.com/buildpacks/hashnuke/elixir.tgz"
    },
    {
      "url": "https://github.com/gjaldon/heroku-buildpack-phoenix-static.git"
    }
  ],
  "env": {
    "HOST": {
      "required": true
    },
    "MIX_ENV": {
      "required": true,
    },
    "POOL_SIZE": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    }
  },
  "environments": {
    "test": {
      "env": {
        "MIX_ENV": "test",
        "POOL_SIZE": "18"
      },
      "scripts": {
        "test": "mix ci_test"
      }
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "name": "pomo",
  "scripts": {
  },
  "stack": "heroku-18"
}
